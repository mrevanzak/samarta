---
import { SITE } from 'astrowind:config';
import Image from '@/components/common/Image.astro';
import { findImage } from '@/utils/images';

const image = await findImage('@/assets/images/logo.png');
---

<div class="flex flex-row items-center">
  <Image src={image} alt="Samarta Logo" class="size-16 2xl:size-14" aspectRatio="1:1" />
  <span class="text-foreground whitespace-nowrap font-logo text-xl font-bold uppercase md:hidden md:text-2xl lg:block">
    {SITE?.name}
  </span>
</div>
