---
import { SITE } from 'astrowind:config';
import Image from '@/components/common/Image.astro';
import { findImage } from '@/utils/images';

const image = await findImage('@/assets/images/logo.png');
---

<div class="flex-row flex items-center">
  <Image src={image} alt="Samarta Logo" width={72} aspectRatio="1:1" />
  <span class="text-xl md:text-2xl font-bold font-logo text-gray-900 whitespace-nowrap dark:text-white">
    {SITE?.name}
  </span>
</div>
