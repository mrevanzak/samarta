---
import { join } from 'node:path';
import { getAsset } from '@/utils/permalinks';
import { AstroFont } from 'astro-font';

const fontPrefix = import.meta.env.PROD ? '/' : join(process.cwd(), 'public');
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />

<link rel="sitemap" href={getAsset('/sitemap-index.xml')} />
<AstroFont
  config={[
    {
      name: 'Creato Display',
      src: [
        {
          style: 'bold',
          weight: '700',
          path: join(fontPrefix, 'CreatoDisplay-Bold.otf'),
        },
      ],
      preload: true,
      display: 'swap',
      fallback: 'sans-serif',
    },
  ]}
/>
