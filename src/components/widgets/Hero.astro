---
import Carousel from '@/components/ui/Carousel.astro';
import type { Hero as Props } from '@/types';
import Button from '@/components/ui/Button.astro';

const { images } = Astro.props;
---

<Carousel images={images} />
<div class="absolute top-1/3 left-[8.3%] text-broken-white flex flex-col items-start gap-14">
  <h1 class="font-hero text-8xl leading-[75px]">Hello, <br/>
    <span class="text-5xl">Smart People!</span>
  </h1>
  
  <Button variant='primary' class="rounded-lg">Contact Us</Button>
</div>
